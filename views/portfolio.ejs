<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Curriculum Vitae</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #F0EDE5;
            color: #3D3B35;
            /* Darker color for text */
        }

        header {
            background-color: #F0EDE5;
            padding: 20px 0;
            text-align: center;
        }

        nav {
            background-color: #f2e9d0;
            padding: 10px 0;
            text-align: center;
        }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        nav li {
            display: inline;
            margin-right: 20px;
        }

        nav a {
            text-decoration: none;
            color: #7E7A73;
            padding: 10px 20px;
            transition: color 0.3s ease;
        }

        nav a:hover {
            color: #3D3B35;
        }

        .cv-content {
            margin: 50px auto;
            max-width: 800px;
            background-color: #FFFFFF;
            padding: 20px;
            border-radius: 10px;
        }

        .cv-content h2 {
            color: #3D3B35;
            margin-top: 0;
        }

        .cv-content ul {
            list-style-type: none;
            padding: 0;
        }

        .cv-content li {
            margin-bottom: 10px;
        }

        .cv-content a {
            text-decoration: none;
            color: #7E7A73;
        }

        .cv-content a:hover {
            color: #3D3B35;
        }

        .repository-card {
            border: 3px solid #ccc;
            border-radius: 25px;
            padding: 15px;
            margin-bottom: 10px;
            background-color: #fff;
        }

        .repository-card a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

        .repository-card a:hover {
            text-decoration: underline;
        }

        footer {
            background-color: #F0EDE5;
            padding: 20px 0;
            text-align: center;
        }

        footer p {
            color: #7E7A73;
        }

        .moving-image {
            position: fixed;
            width: 150px;
            height: auto;
            bottom: 0;
            right: 0;
            animation: moveImage 5s linear infinite;
        }

        @keyframes moveImage {
            0% {
                right: 0;
            }

            100% {
                right: calc(100% - 50px);
            }
        }

        /* Make the "Portfolio" link bold */
        nav ul li:nth-child(3) a {
            font-weight: bold;
        }
    </style>
</head>

<body>


    <nav>
        <ul>
            <% portfoliodata.navLinks.forEach(link => { %>
                <li><a href="<%= link.href %>" class="<%= link.animation %>"><%= link.text %></a></li>
            <% }); %>
        </ul>
    </nav>

    <header>
        <h1><%= portfoliodata.name %></h1>
        <p><%= portfoliodata.role %></p>
    </header>

    <section class="cv-content">
        <h2>Education</h2>
        <% portfoliodata.education.forEach(function(edu) { %>
            <ul>
                <li><%= edu.degree %></li>
                <li><%= edu.school %></li>
                <li><%= edu.batch %></li>
            </ul>
            <p>_______________________________</p>
        <% }); %>
    
        <h2>Skills</h2>
        <ul>
            <% portfoliodata.skills.forEach(function(skill) { %>
                <li><%= skill %></li>
            <% }); %>
        </ul>

        <p>_______________________________</p>
    
        <h2>Experience</h2>
        <ul>
            <% portfoliodata.experience.forEach(function(exp) { %>
                <ul>
                    <li><%= exp.subject %></li>
                    <li><%= exp.when %></li>
                </ul>
                <p>_______________________________</p>
            <% }); %>
        </ul>
    
        <h2>GitHub Repositories</h2>
        <% portfoliodata.repositories.forEach(function(repo) { %>
            <div class="repository-card">
                <a href="<%= repo.url %>"><%= repo.name %></a> | <%= repo.type %>
            </div>
        <% }); %>
    </section>

    <footer>
        <p>&copy; 2024 <%= portfoliodata.name %>. All rights reserved.</p>
        <img src="<%= portfoliodata.movingImageUrl %>" alt="Moving Image" class="moving-image">
    </footer>

</body>

</html>